nazwisko = "Jankowski"
przedzial = nazwisko[0:3]
print(przedzial)

przedzial1 = nazwisko[-2:-1]
print(przedzial1)

przedzial2 = nazwisko[-2:]
print(przedzial2)

przedzial3 = nazwisko[:-2]
print(przedzial3)

przedzial4 = nazwisko[:-2:2]
print(przedzial4)

przedzial5 = nazwisko[::2]
print(przedzial5)
